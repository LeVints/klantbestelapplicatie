@page
@model KE03_INTDEV_SE_1_Base.Pages.CartModel
@{
    ViewData["Title"] = "Winkelwagen";
}

<h1 class="mt-5">Winkelwagen</h1>

@if (!Model.Items.Any())
{
    <p class="text-muted">Je winkelwagen is leeg.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th class="text-center">Aantal</th>
                <th class="text-end">Prijs per stuk</th>
                <th class="text-end">Subtotaal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td class="text-center">@item.Quantity</td>
                    <td class="text-end">&euro; @item.UnitPrice.ToString("0.00")</td>
                    <td class="text-end">&euro; @(item.UnitPrice * item.Quantity).ToString("0.00")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end fw-bold">Totaal</td>
                <td class="text-end fw-bold">
                    &euro; @Model.Items.Sum(i => i.UnitPrice * i.Quantity).ToString("0.00")
                </td>
            </tr>
        </tfoot>
    </table>
}
