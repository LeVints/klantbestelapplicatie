@page
@model KE03_INTDEV_SE_1_Base.Pages.IndexModel
@{
    ViewData["Title"] = "Online Bestelsysteem";
}

<section class="text-center my-5">
    <h1 class="display-4 fw-bold text-primary">@ViewData["Title"]</h1>
    <p class="lead text-muted">Een gebruiksvriendelijk platform voor al uw bestellingen</p>
</section>

<!-- Klant toevoegen formulier -->
<div class="container mb-4">
    <form method="post">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <input type="text" name="Name" class="form-control" placeholder="Naam (bv. Vince)" required />
            </div>
            <div class="col-md-4">
                <input type="text" name="Address" class="form-control" placeholder="Adres (bv. Matrixlaan 101)" required />
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input type="checkbox" name="Active" class="form-check-input" checked />
                    <label class="form-check-label">Actief</label>
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-success">Klant toevoegen</button>
            </div>
        </div>
    </form>
</div>

<!-- Productenoverzicht -->
<div class="container mt-5">
    <h2>Producten</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Prijs</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>&euro; @product.Price.ToString("0.00")</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <input type="hidden" name="productName" value="@product.Name" />
                        <input type="hidden" name="price" value="@product.Price" />
                        <button type="submit" asp-page-handler="AddToCart" class="btn btn-primary">
                            Voeg toe aan winkelmand
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
