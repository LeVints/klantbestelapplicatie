@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-4">
    @* Pagina titel *@
    <h1 class="mb-4">Privacy Policy</h1>

    <div class="overview-section">
        <div class="row">
            <div class="col-12 col-lg-8 mx-auto">
                @* Kaart met privacyverklaring *@
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-shield-check"></i> Privacyverklaring
                        </h5>
                    </div>
                    <div class="card-body">
                        @* Introductietekst *@
                        <p class="lead">
                            Op deze pagina vind je onze privacyverklaring.
                        </p>

                        @* Sectie: verzamelde gegevens *@
                        <div class="mt-4">
                            <h6 class="fw-bold text-primary">
                                <i class="bi bi-collection"></i> Welke gegevens we verzamelen
                            </h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> Naam en contactgegevens</li>
                                <li><i class="bi bi-check-circle text-success"></i> Bestel- en betaalgegevens</li>
                                <li><i class="bi bi-check-circle text-success"></i> IP-adres en browserinformatie</li>
                            </ul>
                        </div>

                        @* Sectie: doel van gegevensverwerking *@
                        <div class="mt-4">
                            <h6 class="fw-bold text-primary">
                                <i class="bi bi-question-circle"></i> Waarom we deze data gebruiken
                            </h6>
                            <p>Om bestellingen correct uit te voeren, klantenservice te bieden en wet- en regelgeving na te leven.</p>
                        </div>

                        @* Sectie: gebruikersrechten *@
                        <div class="mt-4">
                            <h6 class="fw-bold text-primary">
                                <i class="bi bi-person-check"></i> Jouw rechten
                            </h6>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-arrow-right text-primary"></i> Een overzicht van je persoonsgegevens opvragen</li>
                                <li><i class="bi bi-arrow-right text-primary"></i> Correctie of verwijdering van je gegevens vragen</li>
                                <li><i class="bi bi-arrow-right text-primary"></i> Bezwaar maken tegen bepaalde verwerkingen</li>
                            </ul>
                        </div>

                        @* Contactinformatie voor privacyvragen *@
                        <div class="mt-4 p-3 bg-light rounded">
                            <p class="mb-0">
                                <i class="bi bi-envelope"></i> Voor vragen over privacy kun je mailen naar
                                <a href="mailto:privacy@matrixinc.com" class="text-decoration-none">privacy@matrixinc.com</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
