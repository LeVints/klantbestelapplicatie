<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – Bestelsysteem</title>

    <!-- Bootstrap 5 via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css"
          rel="stylesheet" />

    <!-- Eigen styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    @{
        // Huidig request-path (bv "/" voor Home, "/Cart", "/Privacy")
        var currentPath = Context.Request.Path.Value?.ToLowerInvariant() ?? "";
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                    <i class="bi bi-shop me-2 text-primary"></i>
                    Bestelsysteem
                </a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentPath == "/" ? "active fw-bold" : "")"
                               asp-page="/Index">
                               <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPath == "/Overzicht" ? "active fw-bold" : "")"
                               asp-page="/Overzicht">
                               <i class="bi bi-list-ul me-1"></i>Overzicht
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPath.StartsWith("/cart") ? "active fw-bold" : "")"
                               asp-page="/Cart">
                               <i class="bi bi-cart me-1"></i>Winkelwagen
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPath.StartsWith("/privacy") ? "active fw-bold" : "")"
                               asp-page="/Privacy">
                               <i class="bi bi-shield-check me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center py-4 mt-5">
        <div class="container text-muted">
            <div class="row">
                <div class="col-12">
                    <p class="mb-2">
                        <i class="bi bi-c-circle"></i> 2025 – Bestelsysteem
                    </p>
                    <small class="text-muted">
                        Een gebruiksvriendelijk platform voor al uw bestellingen
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
